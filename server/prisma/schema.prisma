generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photo {
  id String @id
  /// url generated by S3 that stores the image blob
  url String
  filename String
  camera String
  film String
  uploadedAt DateTime @default(now())
  expiresAt DateTime @default(now())
}
